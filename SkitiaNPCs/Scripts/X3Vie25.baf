//Friendship Talks 
IF 
	RealGlobalTimerExpired("X3VieToBTalkTimer","GLOBAL")
	CombatCounter(0)
    !See([ENEMY])
	!AreaType(DUNGEON)
	GlobalGT("X3VieApp","GLOBAL",0)
	OR(3)
	 Global("X3VieToBTalk","LOCALS",1)
	 Global("X3VieToBTalk","LOCALS",3)
	 Global("X3VieToBTalk","LOCALS",5)
THEN
  RESPONSE #100
	IncrementGlobal("X3VieToBTalk","LOCALS",1)
END

