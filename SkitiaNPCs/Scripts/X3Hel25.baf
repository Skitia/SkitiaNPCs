END 

// Friendship Talk #1
IF 
	Global("X3HelToBTalk","LOCALS",1)
    IsValidForPartyDialogue(Myself)
	IsValidForPartyDialogue(Player1)
    See(Player1)
    RealGlobalTimerExpired("X3HelToBTalkTimer","GLOBAL")
    CombatCounter(0)
    !See([ENEMY])
	!AreaType(DUNGEON)
	GlobalGT("X3HelApp","GLOBAL",0)
THEN RESPONSE #100	
	IncrementGlobal("X3HelToBTalk","LOCALS",1)
END 
